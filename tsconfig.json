{
  "compilerOptions": {
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "incremental": true
  },
  "jsx": "react-jsx",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "img.d.ts"
  ],
  "extends": "expo/tsconfig.base",
  "modeResolution": "node"
}
